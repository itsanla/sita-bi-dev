# ===========================================
# SITA BI - Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the required values
# Variables marked with [REQUIRED] MUST be filled in for the app to work

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="file:../../../packages/db/prisma/dev.db"

# ===========================================
# EMAIL CONFIGURATION [REQUIRED]
# ===========================================
# Email is REQUIRED for:
# - OTP verification during registration
# - Password reset functionality
# - Email notifications for sidang and bimbingan

# Your Gmail address
EMAIL_USER=your-email@gmail.com

# Gmail App Password (NOT your regular password!)
# How to get App Password:
# 1. Go to https://myaccount.google.com/
# 2. Security → 2-Step Verification (enable if not already)
# 3. Scroll down → App passwords
# 4. Select app: Mail, device: Other (Custom name)
# 5. Name it "SITA BI Backend"
# 6. Copy the 16-character password
EMAIL_PASS=your-app-password

# Frontend URL for email links
FRONTEND_URL=http://localhost:3001

# Application name shown in emails
APP_NAME="SITA BI"

# ===========================================
# UPLOAD CONFIGURATION
# ===========================================
# Directory for uploaded files (relative to backend root)
UPLOADS_DIR=uploads

# Maximum file size in bytes (5MB = 5242880 bytes)
MAX_FILE_SIZE=5242880

# Allowed file extensions (comma-separated, no spaces)
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,pdf,doc,docx

# ===========================================
# WHATSAPP CONFIGURATION [OPTIONAL]
# ===========================================
# Auto-initialize WhatsApp on server startup (true/false)
# Set to false if you don't want to use WhatsApp notifications
WHATSAPP_AUTO_INIT=true

# Enable WhatsApp notifications (true/false)
# Requires WHATSAPP_AUTO_INIT=true to work
WHATSAPP_NOTIFICATIONS_ENABLED=true

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Backend server port
PORT=3002

# Backend API URL (used for CORS and internal references)
API_URL=http://localhost:3002

# Node environment (development/production)
NODE_ENV=development

# ===========================================
# GEMINI AI CONFIGURATION [OPTIONAL]
# ===========================================
# Gemini API is used for:
# - AI-powered chatbot in frontend
# - Title similarity checking for plagiarism detection
# 
# You can use 1-10 API keys for rotation to avoid rate limits
# Get free API keys from: https://aistudio.google.com/app/apikey
#
# Minimum: Fill GEMINI_API_KEY_1
# Recommended: Fill all 10 keys for better rate limit handling

GEMINI_API_KEY_1=your-gemini-api-key-1
GEMINI_API_KEY_2=your-gemini-api-key-2
GEMINI_API_KEY_3=your-gemini-api-key-3
GEMINI_API_KEY_4=your-gemini-api-key-4
GEMINI_API_KEY_5=your-gemini-api-key-5
GEMINI_API_KEY_6=your-gemini-api-key-6
GEMINI_API_KEY_7=your-gemini-api-key-7
GEMINI_API_KEY_8=your-gemini-api-key-8
GEMINI_API_KEY_9=your-gemini-api-key-9
GEMINI_API_KEY_10=your-gemini-api-key-10

# ===========================================
# QUICK START CHECKLIST
# ===========================================
# ✅ 1. Copy this file to .env
# ✅ 2. Fill EMAIL_USER with your Gmail address
# ✅ 3. Fill EMAIL_PASS with Gmail App Password (NOT regular password!)
# ⚠️  4. Optional: Fill GEMINI_API_KEY_1 for AI features
# ⚠️  5. Optional: Keep WHATSAPP_AUTO_INIT=true for WhatsApp notifications
# ✅ 6. Run: pnpm install
# ✅ 7. Run: pnpm --filter @repo/db db:push
# ✅ 8. Run: pnpm --filter api dev
