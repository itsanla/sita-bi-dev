{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "api#dev": {
      "cache": false,
      "persistent": true
    },
    "api#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
