{
  "systemName": "SITA-BI Design System",
  "version": "1.0.0",
  "lastUpdated": "2024-11-19",
  "description": "Universal design rules untuk sistem SITA-BI (Sistem Informasi Tugas Akhir - Bimbingan)",
  
  "colors": {
    "primary": {
      "maroon": {
        "50": "#fef2f2",
        "100": "#fee2e2",
        "200": "#fecaca",
        "300": "#fca5a5",
        "400": "#f87171",
        "500": "#7f1d1d",
        "600": "#991b1b",
        "700": "#7f1d1d",
        "800": "#5f1515",
        "900": "#450a0a",
        "DEFAULT": "#7f1d1d"
      }
    },
    "neutral": {
      "white": "#ffffff",
      "gray": {
        "50": "#f9fafb",
        "100": "#f3f4f6",
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827",
        "DEFAULT": "#6b7280"
      }
    },
    "accent": {
      "blue": {
        "light": "#3b82f6",
        "DEFAULT": "#2563eb",
        "dark": "#1e40af"
      },
      "green": {
        "light": "#10b981",
        "DEFAULT": "#059669",
        "dark": "#047857"
      },
      "amber": {
        "light": "#fbbf24",
        "DEFAULT": "#f59e0b",
        "dark": "#d97706"
      }
    },
    "semantic": {
      "success": "#059669",
      "warning": "#f59e0b",
      "error": "#dc2626",
      "info": "#2563eb"
    }
  },

  "typography": {
    "fontFamily": {
      "sans": "Inter, system-ui, -apple-system, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75",
      "loose": "2"
    },
    "headings": {
      "h1": {
        "fontSize": "2.25rem",
        "fontWeight": "700",
        "lineHeight": "1.25",
        "color": "#374151",
        "marginBottom": "1rem"
      },
      "h2": {
        "fontSize": "1.875rem",
        "fontWeight": "700",
        "lineHeight": "1.25",
        "color": "#374151",
        "marginBottom": "0.875rem"
      },
      "h3": {
        "fontSize": "1.5rem",
        "fontWeight": "600",
        "lineHeight": "1.25",
        "color": "#4b5563",
        "marginBottom": "0.75rem"
      },
      "h4": {
        "fontSize": "1.25rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#4b5563",
        "marginBottom": "0.5rem"
      },
      "h5": {
        "fontSize": "1.125rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#6b7280",
        "marginBottom": "0.5rem"
      },
      "h6": {
        "fontSize": "1rem",
        "fontWeight": "600",
        "lineHeight": "1.5",
        "color": "#6b7280",
        "marginBottom": "0.5rem"
      }
    }
  },

  "spacing": {
    "scale": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "7": "1.75rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    },
    "sections": {
      "betweenElements": "1.5rem",
      "betweenCards": "1.5rem",
      "betweenSections": "3rem",
      "pageTop": "2rem",
      "pageBottom": "2rem",
      "pageHorizontal": "1.5rem"
    },
    "cards": {
      "padding": "1.5rem",
      "gap": "1rem"
    }
  },

  "layout": {
    "maxWidth": {
      "content": "1280px",
      "reading": "65ch",
      "form": "600px"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1536px"
    },
    "container": {
      "padding": "1.5rem"
    },
    "grid": {
      "columns": {
        "default": 12,
        "gap": "1.5rem"
      }
    }
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.375rem",
    "base": "0.5rem",
    "md": "0.75rem",
    "lg": "1rem",
    "xl": "1.25rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },

  "components": {
    "button": {
      "padding": {
        "sm": "0.5rem 1rem",
        "base": "0.75rem 1.5rem",
        "lg": "1rem 2rem"
      },
      "fontSize": {
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem"
      },
      "borderRadius": "0.75rem",
      "fontWeight": "600",
      "variants": {
        "primary": {
          "background": "#7f1d1d",
          "color": "#ffffff",
          "hover": {
            "background": "#991b1b"
          }
        },
        "secondary": {
          "background": "#f3f4f6",
          "color": "#374151",
          "hover": {
            "background": "#e5e7eb"
          }
        },
        "outline": {
          "background": "transparent",
          "border": "2px solid #7f1d1d",
          "color": "#7f1d1d",
          "hover": {
            "background": "#7f1d1d",
            "color": "#ffffff"
          }
        }
      }
    },
    "card": {
      "background": "#ffffff",
      "padding": "1.5rem",
      "borderRadius": "1rem",
      "border": "1px solid #e5e7eb",
      "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
      "hover": {
        "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "transform": "translateY(-2px)"
      }
    },
    "input": {
      "padding": "0.75rem 1rem",
      "fontSize": "1rem",
      "borderRadius": "0.75rem",
      "border": "1px solid #d1d5db",
      "focus": {
        "borderColor": "#7f1d1d",
        "ring": "0 0 0 3px rgba(127, 29, 29, 0.1)"
      }
    },
    "table": {
      "header": {
        "background": "#f9fafb",
        "padding": "0.75rem 1rem",
        "fontSize": "0.75rem",
        "fontWeight": "600",
        "color": "#6b7280",
        "textTransform": "uppercase"
      },
      "row": {
        "padding": "1rem",
        "fontSize": "0.875rem",
        "borderBottom": "1px solid #e5e7eb",
        "hover": {
          "background": "#f9fafb"
        }
      },
      "pagination": {
        "itemsPerPage": 10,
        "buttonSize": "2.5rem",
        "gap": "0.5rem"
      }
    },
    "badge": {
      "padding": "0.25rem 0.75rem",
      "fontSize": "0.75rem",
      "fontWeight": "600",
      "borderRadius": "9999px",
      "variants": {
        "success": {
          "background": "#d1fae5",
          "color": "#047857"
        },
        "warning": {
          "background": "#fed7aa",
          "color": "#d97706"
        },
        "error": {
          "background": "#fee2e2",
          "color": "#dc2626"
        },
        "info": {
          "background": "#dbeafe",
          "color": "#1e40af"
        },
        "neutral": {
          "background": "#f3f4f6",
          "color": "#4b5563"
        }
      }
    }
  },

  "animations": {
    "duration": {
      "fast": "150ms",
      "base": "300ms",
      "slow": "500ms",
      "slower": "700ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "hover": {
      "scale": "1.02",
      "lift": "-2px",
      "rotate": "2deg"
    }
  },

  "accessibility": {
    "focusRing": {
      "width": "3px",
      "color": "#7f1d1d",
      "offset": "2px",
      "style": "solid"
    },
    "minTouchTarget": "44px",
    "contrastRatio": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    }
  },

  "language": {
    "default": "id",
    "dateFormat": "DD/MM/YYYY",
    "timeFormat": "HH:mm",
    "currency": "Rp",
    "numberFormat": {
      "decimal": ",",
      "thousands": "."
    }
  },

  "pages": {
    "dashboard": {
      "heroHeight": "200px",
      "cardGrid": {
        "columns": 4,
        "gap": "1.5rem"
      }
    },
    "forms": {
      "maxWidth": "600px",
      "labelFontSize": "0.875rem",
      "inputHeight": "2.75rem"
    },
    "tables": {
      "rowHeight": "3.5rem",
      "headerHeight": "3rem",
      "itemsPerPage": 10
    }
  },

  "notes": {
    "colorScheme": "Dominan putih-abu-abu dengan aksen maroon (#7f1d1d)",
    "language": "Bahasa Indonesia",
    "consistency": "Semua halaman harus mengikuti aturan spacing, typography, dan color yang sama",
    "responsive": "Desain harus responsif untuk mobile, tablet, dan desktop",
    "accessibility": "Ikuti standar WCAG 2.1 Level AA minimum"
  }
}
